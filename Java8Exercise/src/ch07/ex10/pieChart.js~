#!/usr/bin/jjs -scripting

function pieChartData(name, data) {
	return new javafx.scene.chart.PieChart.Data(name, data)
}	

var dataList = new javafx.collections.ObservableList(
dataList.add(pieChartData('A', 40)),
dataList.add(pieChartData('B', 25)),
dataList.add(pieChartData('C', 15)),
dataList.add(pieChartData('D', 20)),
dataList.add(pieChartData('E', 5)),
dataList.add(pieChartData('other', 5)))
var chart = new javafx.scene.chart.PieChart(dataList);
$STAGE.scene = new javafx.scene.Scene(chart);
$STAGE.title = "Population of the Continents";